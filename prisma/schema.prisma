generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Service {
  id          String       @id @default(cuid())
  slug        String       @unique
  name        String
  shortDesc   String
  fullDesc    String
  benefits    String // JSON array
  duration    String?
  price       String?
  image       String?
  icon        String?
  keywords    String
  metaTitle   String?
  metaDesc    String?
  order       Int          @default(0)
  isActive    Boolean      @default(true)
  isFeatured  Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  faqs        ServiceFAQ[]
}

model ServiceFAQ {
  id        String   @id @default(cuid())
  question  String
  answer    String
  order     Int      @default(0)
  serviceId String
  service   Service  @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model FAQ {
  id        String   @id @default(cuid())
  question  String
  answer    String
  category  String?
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Testimonial {
  id         String   @id @default(cuid())
  name       String
  initials   String?
  location   String?
  rating     Int      @default(5)
  content    String
  service    String?
  avatar     String?
  isVerified Boolean  @default(false)
  source     String?
  isFeatured Boolean  @default(false)
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model TeamMember {
  id            String   @id @default(cuid())
  name          String
  role          String
  bio           String
  specialties   String // JSON array
  image         String?
  collegiateNum String?
  order         Int      @default(0)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model SiteConfig {
  id            String   @id @default("main")
  clinicName    String   @default("Clínica Podológica Carrera")
  tagline       String?
  phone         String
  whatsapp      String?
  email         String
  address       String
  city          String   @default("Móstoles")
  postalCode    String
  province      String   @default("Madrid")
  country       String   @default("España")
  latitude      Float?
  longitude     Float?
  googleMapsUrl String?
  schedule      String // JSON horarios
  socialLinks   String? // JSON redes sociales
  updatedAt     DateTime @updatedAt
}

model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String?
  service   String?
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}
